<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/back"
    tools:context="com.project.umbcmobile.umbc_mobile.LoginActivity">

    <ImageView
        android:id="@+id/backgroundLogo"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/google"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg" >

        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:alpha = "0.6"
        android:background="#ff0000"
        android:layout_marginBottom="432dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="169dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="169dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:alpha="0.5"
            android:layout_centerVertical="true"
            android:paddingLeft="130dp"
            android:background="#000000"
            android:hint="Email"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="-10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/imageview"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:src="@drawable/email2"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:alpha = "0.6"
        android:background="#ff0000"
        android:layout_marginBottom="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="169dp"
        android:id="@+id/relativeLayout6"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="169dp">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:alpha="0.5"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="130dp"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="-10dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/imageview1"
            android:padding="3dp"
            android:layout_gravity="start"
            android:src="@drawable/password"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignTop="@+id/relativeLayout6"
        android:layout_alignStart="@+id/relativeLayout6"
        android:id="@+id/relativeLayout7"
        android:layout_alignLeft="@+id/relativeLayout6">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textSize="20dp"
            android:buttonTint="#ff00"
            android:textColor="#ffff"
            android:id="@+id/checkBoxRemember"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="LOG IN"
            android:textSize="25dp"
            android:id="@+id/buttonLogin"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.5"
            android:textColor="#ffffff"
            android:theme="@style/ColoredButton"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:layout_below="@+id/relativeLayout7"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:id="@+id/textView1"
            android:textColor="#ffff"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/facebook"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText6"
            android:layout_toRightOf="@+id/editText6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="with facebook"
            android:textColor="#ffff"
            android:id="@+id/textView2"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textColor="#ffff"
            android:id="@+id/textView3"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="240dp"/>

        <Button
            android:id="@+id/gmail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/google"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText6"
            android:layout_toRightOf="@+id/editText6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="with google"
            android:textColor="#ffff"
            android:id="@+id/textView4"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/relativeLayout8"
        android:layout_below="@+id/linearLayout8"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:id="@+id/textView5"
                    android:textColor="#ffff"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up here"
                    android:id="@+id/textViewSignUp"
                    android:layout_toRightOf="@+id/textView5"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ff0000"
                    android:textSize="15dp"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot your Password?"
                android:id="@+id/textViewForgot"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp"
                android:textColor="#ffff"
                android:textSize="15sp"
                android:clickable="true"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
